/*
 * responsive.less
 * ===============
 * Defines layouts for modern browsers with wider screens
 * ------------------------------------------------------
 *
 * Is only used in responsive designs
 * In regular design it should be enough to define layout in base.less
 * 
 * Should be loaded only by browsers that support media queries
 *
 * ----------------------------------------------------------------- */


/*------------------------------------*\
	CONTENTS
\*------------------------------------*/
/*
VARIABLES & MIXINS
LAYOUTS
*/





/*-------------------------------------------------------------------*\
	INITIALIZE

	Declare LESS variables and mixins (LESS Functions)
\*-------------------------------------------------------------------*/
// Variables
@import 'system/variables/variables.less';    // Custom colors, font-sizes, etc

// Mixins - LESS Functions
@import 'system/mixins/grid.less';  			// Grid system - Clearfix & Debug mixins included


/*-------------------------------------------------------------------*\
	LAYOUTS

	Use media queries to assign layouts to different screen sizes
\*-------------------------------------------------------------------*/
// Preload layouts mixins 
@import 'system/layouts/480up.less';
@import 'system/layouts/600up.less';
@import 'system/layouts/768up.less';
@import 'system/layouts/992up.less';
@import 'system/layouts/1382up.less';

// Assign layouts to different screen sizes
/* 480px */
@media only screen and (min-width: 480px) {
	.480up();
}
/* 600px */
@media only screen and (min-width: 600px) {
  .600up();
}
/* 768px */
@media only screen and (min-width: 768px) {
  .768up();
}
/* 992px */
@media only screen and (min-width: 992px) {
  .992up();
}
/* 1382px */
@media only screen and (min-width: 1382px) {
  .1382up();
}
